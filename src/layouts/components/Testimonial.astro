---
import TestimonialSlider from "@layouts/function-components/TestimonialSlider";
const { testimonial } = Astro.props;
---

<section class="reviews">
  <div class="container">
    <div class="row justify-between">
      <div class="lg:col-6">
        <h2>Portfolio Showcase: Where Our Work Speaks for Itself</h2>
      </div>
      <div class="lg:col-4">
        <p>
          Explore our portfolio to witness a showcase of our expertise, creativity, and successful collaborations that inspire confidence and trust.
        </p>
      </div>
    </div>
    <div class="row mt-10">
      <div class="col-12">
        <TestimonialSlider list={testimonial.testimonial_list} client:load />
      </div>
    </div>
  </div>
</section>
